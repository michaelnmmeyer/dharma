          <!-- narake in Sircar -->
        </lg>
        <lg corresp="#Sircar1965_st0005" met="indravajrā" n="4">
          <l n="a">agn<choice>
              <sic>a</sic>
              <corr>e</corr>
            </choice>r apatyaṁ prathamaṁ suv<choice>
              <sic>ann</sic>
