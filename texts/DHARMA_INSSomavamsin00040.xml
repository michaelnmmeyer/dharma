          <!-- likely Sircar1965_st0055 <l n="c">haran narakam āyāti</l> -->
          <l n="d">yāvad—ā-hū<lb break="no" n="43"/>ta-saṁplavam</l>
          <!-- likely Sircar1965_st0055 <l n="d">yāvad—ā-bhūta-saṁplavam</l> -->
        </lg>
        <lg corresp="#Sircar1965_st0117" met="śālinī" n="13">
