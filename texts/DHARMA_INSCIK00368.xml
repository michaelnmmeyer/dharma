        <lg met="anuṣṭubh" n="25">
          <l n="a"><lb n="C1"/><milestone n="C" type="pagelike" unit="face"/><milestone n="a" unit="column"/>dve tu vrīhy-avaghātinyau</l>
          <l n="b"><milestone n="b" unit="column"/>tā Aṣṭau pi<choice>
              <orig>nd</orig>
              <corr>ṇḍ</corr>
            </choice>itāḥ striyaḥ</l>
          <l n="c"><lb n="C2"/><milestone n="a" unit="column"/>tāsān tu sthiti-dāyinyaḥ</l>
          <l n="d"><milestone n="b" unit="column"/>pratyekaṁ yoṣitāv ubhe</l>
        </lg>
        <lg met="anuṣṭubh" n="26">
          <l n="a"><lb n="C3"/><milestone n="a" unit="column"/>punaḥ pi<choice>
              <orig>nd</orig>
              <reg>ṇḍ</reg>
            </choice>īkr̥tās te tu</l>
          <l n="b"><milestone n="b" unit="column"/>dvā-triṁśat paricārikāḥ</l>
          <l n="c"><lb n="C4"/><milestone n="a" unit="column"/>bhūyo 'ṣṭānavatis sarvve</l>
          <l n="d"><milestone n="b" unit="column"/>pi<choice>
              <orig>nd</orig>
              <corr>ṇḍ</corr>
            </choice>itās sthitidais saha</l>
        </lg>
        <lg met="anuṣṭubh" n="27">
          <l n="a"><lb n="C5"/><milestone n="a" unit="column"/>ta<choice>
              <orig>nd</orig>
              <corr>ṇḍ</corr>
            </choice>ulā deva-pūjāṅśā</l>
