        <lg met="anuṣṭubh" n="1">
          <l n="a"><lb n="1"/><supplied reason="lost">śivan namāmi yo</supplied> 'haṅ sa</l>
          <l n="b">yo haṅsa-parikīrttitaḥ</l>
          <l n="c">Iti tattva-vidaḥ prāhu<lb break="no" n="2"/>r</l>
          <l n="d"><seg met="====-+">
              <gap quantity="6" reason="lost" unit="character"/>
            </seg>namaḥ</l>
        </lg>
        <lg met="upajāti" n="2">
          <l enjamb="yes" n="1">śrī-harṣavarmmāvanipendra-mātr̥</l>
