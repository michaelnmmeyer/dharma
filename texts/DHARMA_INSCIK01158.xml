        <lg met="anuṣṭubh" n="1" xml:lang="san-Latn">
          <l n="a"><lb n="A1"></lb><milestone n="a" unit="column"></milestone><g type="circleHorned">.</g> śrī-pañca-sugatā yādau</l>
          <l n="b"><milestone n="b" unit="column"></milestone>śrī-ghanānāṁ vibhāvakāḥ</l>
          <l n="c"><lb n="A2"></lb><milestone n="a" unit="column"></milestone>śrī-ghanāś ca sudebānāṁ</l>
          <l n="d"><milestone n="b" unit="column"></milestone>śrī-pradātr̥̄n namāmi tān· <g type="ddanda">.</g></l>
        </lg>
        <lg met="anuṣṭubh" n="2" xml:lang="san-Latn">
