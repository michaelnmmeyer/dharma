          </app>
          <app loc="2">
            <lem>anityaṁ</lem>
            <rdg source="bib:Coedes1937-1966_01">anityam</rdg>
          </app>
          <app loc="2">
            <lem>sadī<supplied reason="lost">pakam· <g type="dDandaOrn">.</g></supplied></lem>
