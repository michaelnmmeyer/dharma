          <l n="b"><seg met="==">
              <gap quantity="2" reason="lost" unit="character"/>
            </seg> <supplied reason="lost">bh</supplied>āgavataḥ kaviḥ _</l>
          <l n="c">thnalvnaḥpura-kule lavdha_</l>
          <l n="d">janmā hr̥t-stha-haris sadā <g type="dDandaOrn">.</g></l>
        </lg>
        <lg met="anuṣṭubh" n="2">
          <l enjamb="yes" n="a"><lb n="2"/>sa haṅso jñāna-śuddhātmā_</l>
          <l n="b">nam anityaṁ vicintayan· _</l>
          <l n="c">prati tasmād dharau prādā_d</l>
          <l n="d">ghr̥ṭa-pātraṁ sadī<supplied reason="lost">pakam· <g type="dDandaOrn">.</g></supplied></l>
        </lg>
