      <div type="edition" xml:lang="okz-Latn">
        <lg met="anuṣṭubh" n="1" xml:lang="san-Latn">
          <l n="a"><lb n="1"></lb> <g type="gomutraInitial">.</g> yatra sthānumatasthānaṁ</l>
          <l n="b">dr̥śyamānaṁ padadvayaṁ</l>
          <l n="c">sthitvā <gap quantity="1" reason="illegible" unit="character"></gap>durggayā ta<unclear>sya</unclear></l>
          <l n="d"><unclear>manthāna</unclear>nāma prakāśyate</l>
        </lg>
        <lg met="anuṣṭubh" n="2" xml:lang="san-Latn">
          <l n="a"><lb n="2"></lb>tenā<unclear>t</unclear>ra śivapādākhyo</l>
          <l n="b">bhaviṣyas te <seg type="aksara"><seg subtype="body" type="component">
                <gap quantity="1" reason="illegible" unit="component"></gap>
              </seg>u</seg> bhūdharaḥ</l>
          <l n="c">Upāsya <unclear>si</unclear><supplied reason="lost">d</supplied><unclear>dhi</unclear> ya <gap quantity="1" reason="illegible" unit="character"></gap> nāṁ</l>
          <l n="d">smaratām api pāvanaM</l>
        </lg>
        <lg met="anuṣṭubh" n="3" xml:lang="san-Latn">
          <l n="a"><lb n="3"></lb>yatraiva pivatā<unclear>m</unclear> saṁme</l>
          <l n="b">divyasvarga<unclear>pade</unclear> <supplied reason="lost">dhr</supplied>u<supplied reason="lost">vam</supplied></l>
          <l n="c">grava <seg type="aksara"><seg subtype="body" type="component">
                <gap quantity="1" reason="illegible" unit="component"></gap>
              </seg>i</seg><seg type="aksara"><seg subtype="body" type="component">
                <gap quantity="1" reason="illegible" unit="component"></gap>
              </seg>pa</seg>ti <seg met="++=">
              <gap quantity="3" reason="lost" unit="character"></gap>
            </seg></l>
          <l n="d"><seg met="=">
              <gap quantity="1" reason="lost" unit="character"></gap>
            </seg> na val<unclear>īti</unclear> viśrutaḥ</l>
        </lg>
        <p>
          <lb n="4"></lb>
