      <div type="edition" xml:lang="san-Latn">
        <lg met="āryā" n="1">
          <l n="ab">
         			<lb n="1"/>dhik teṣān dhik teṣāṃ punar api dhig dhig dhig astu dhik teṣāṃ
         		</l>
          <l n="cd">
         			yeṣān na vasati hṛdaye <lb n="2"/>k<unclear>u</unclear>-patha-gati -vimokṣako rudraḥ <g type="ddanda">.</g>
         		</l>
        </lg>
      </div>
