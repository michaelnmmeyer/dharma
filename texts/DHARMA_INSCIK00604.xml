        </lg>
        <lg met="anuṣṭubh" n="12">
          <l enjamb="yes" n="a"><lb n="23"/>dvijaḫ pāśupato rājñā</l>
          <l n="b">dhikr̥to devatārccane</l>
          <l n="c"><lb n="24"/>Idan devakulaṁ bhoktum</l>
          <l n="d">arhaty ābhūta-saṁplavam</l>
        </lg>
        <lg met="anuṣṭubh" n="13">
          <l n="a"><lb n="25"/>tena cāvaśyakarttavyam</l>
          <l n="b">asya yatnena pālanam</l>
          <l enjamb="yes" n="c"><lb n="26"/>svapuṇyasyeva sad-vargga</l>
          <l n="d">kr̥tām āśiṣam icchatā</l>
        </lg>
        <lg met="anuṣṭubh" n="14">
          <l n="a"><lb n="27"/>dvārārṇṇaveṣu-śākābde</l>
          <l n="b">dvā-viṅśe puṣya-yogini</l>
          <l enjamb="yes" n="c"><lb n="28"/>Iṣaya divase siṅha</l>
          <l n="d">lagne cāyaṁ sthito haraḥ</l>
        </lg>
        <lg met="anuṣṭubh" n="15">
          <l n="a"><lb n="29"/>kr̥te puṇyādhikāre sminn</l>
          <l n="b">atha yajvā sa bhūbhujā</l>
          <l n="c"><lb n="30"/>ta<unclear>m</unclear>andarapura-svāmi</l>
          <l n="d">bhojaka-pravaraḥ kr̥taḥ</l>
        </lg>
