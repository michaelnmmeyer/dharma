      <div type="edition" xml:lang="san-Latn">
        <lg met="anuṣṭubh" n="1">
          <l n="a"><lb n="1"/>naptā śrī-sārvvabhaumasya <space/></l>
          <l n="b">sūnuś śrī-vīravarmmaṇaḥ</l>
          <l n="c"><lb n="2"/>śaktyānūnaẖ kaniṣṭho 'pi <space/></l>
          <l n="d">bhrātā śrī-bhavavarmmaṇaḥ</l>
        </lg>
        <lg met="anuṣṭubh" n="2">
          <l n="a"><lb n="3"/>śrī-citrasenanāmā ya<space/>ḫ</l>
          <l n="b">pūrvvam āhata-lakṣaṇaḥ</l>
          <l n="c"><lb n="4"/>sa śrī-mahendravarmmeti <space/></l>
          <l n="d">nāma bheje 'bhiṣekajam·</l>
        </lg>
        <lg met="anuṣṭubh" n="3">
          <l n="a" real="++++---+"><lb n="5"/>jitveman <choice>
              <orig>ṭ</orig>
              <corr>d</corr>
            </choice>eśam akhila<space/>ṅ</l>
          <l n="b">giriśasyeha bhū-bhr̥ti</l>
          <l n="c"><lb n="6"/>liṅgan niveśayām āsa <space/></l>
          <l n="d">jaya-cihnam ivātmanaḥ</l>
        </lg>
      </div>
